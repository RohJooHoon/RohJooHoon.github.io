<script type="text/javascript">

  function createStickerFilter() {

    const sendData = {
      "filter_name": $("#filter_name").val().trim(),
      "filter_type": $("#filter_type").val(),
      "status": $('input[name="status"]:checked').val()
    }

    if (checkImpotent()) {
      $.ajax({
        type: "POST",
        url: `${admin_api_url}/units/stickers/filters`,
        data: JSON.stringify(sendData),
        contentType: "application/json",
        success: function (res) {
          alert("유닛 스티커 필터 등록이 정상적으로 완료되었습니다.");
          location.href = "/view/sticker/stickerFilterList";
        },
        error: function (error) {
          console.log("에러 :::: ", error);
        }
      });
    }
  }

  // 필수 입력 유효성 검사.
  function checkImpotent() {
    const $is_impotent = $(".is_impotent");
    for (let i = 0; i < $is_impotent.length; i++) {
      let $target = $is_impotent.eq(i);
      if ($target.is('input')) {
        if (!$target.val()) {
          alert("필터 이름을 입력해주세요.");
          $target.focus();
          return false;
        }
      }
    }
    return true;
  }

</script>
